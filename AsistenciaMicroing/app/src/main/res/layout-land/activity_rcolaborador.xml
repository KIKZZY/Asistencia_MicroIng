<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RColaborador_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/microing" />

            <TextView
                android:id="@+id/tvTituloNuevos"
                android:layout_width="350dp"
                android:layout_height="87dp"
                android:text="@string/Ingreso_Title"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#010912"
                android:textSize="34sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etNombreNuevoCol"
                android:layout_width="312dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:layout_gravity="center_horizontal"
                android:hint="Nombre del Colaborador"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/etNumIde"
                android:layout_width="312dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:layout_gravity="center_horizontal"
                android:hint="Número de Identificación"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/snCargo"
                android:layout_width="312dp"
                android:layout_height="47dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:prompt="@string/Select" />

            <EditText
                android:id="@+id/etFechaIngreso"
                android:layout_width="312dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:layout_gravity="center_horizontal"
                android:hint="Fecha de Ingreso"
                android:inputType="date"
                android:textAlignment="center"
                android:textSize="24sp" />

            <Button
                android:id="@+id/Registrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/Go" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>